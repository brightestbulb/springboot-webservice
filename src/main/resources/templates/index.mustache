{{>layout/header}}

    <h1>스프링 부트 웹 서비스</h1>
    <div class="col-md-12">
        <div class="row">
            <div class="col-md-6">
                <a href="/posts/save" role="button" class="btn btn-primary">글 등록</a>
                {{#userName}}  <!-- if(userName 값이 있다면) -->
                    Logged in as: <span id="user">{{userName}}</span>
                    <a href="/logout" class="btn btn-info active" role="button">Logout</a>  <!-- Spring Security logout 기본 지원 -->
                {{/userName}}
                {{^userName}}  <!-- else -->
                    <a href="/oauth2/authorization/google" class="btn btn-success active" role="button"/>Google Login</a>
                    <!-- Spring Security에서 기본 제공 로그인 URL -->
                {{/userName}}
            </div>
        </div>

        <br/>
        <table class="table table-horizontal table-bordered">
            <thead class="thead-strong">
                <tr>
                    <th>No</th>
                    <th>제목</th>
                    <th>작성자</th>
                    <th>수정일</th>
                </tr>
            </thead>
            <tbody id="tbody">
            {{#posts}}
                <tr>
                    <td>{{bno}}</td>
                    <td><a href="/posts/update/{{bno}}">{{title}}</a></td>
                    <td>{{writer}}</td>
                    <td>{{modifiedDate}}</td>
                </tr>
            {{/posts}}
            </tbody>
        </table>
    </div>
{{>layout/footer}}

